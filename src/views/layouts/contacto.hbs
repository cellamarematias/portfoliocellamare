
<div class="container p-4 mt-4 ">
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3 mt-4 ">
      <div class="card bg-secondary">
        <div class="card-body ">
          <form action="/send-email" method="POST">

            <div class="form-group ">
              <input
                type="text"
                name="name"
                class="form-control mb-2 bg-light"
                placeholder="Name"
                autofocus
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                name="email"
                placeholder="Email"
                class="form-control mb-2 bg-light"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                name="phone"
                placeholder="Phone"
                class="form-control mb-2 bg-light"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                name="message"
                placeholder="Message"
                class="form-control mb-2 bg-light"                              
              />
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-primary">
                Send
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>